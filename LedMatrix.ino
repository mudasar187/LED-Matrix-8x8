void setup() {
  lc.clearDisplay(0);
  lc.shutdown(0, false);
  lc.setIntensity(0, 10);
}

void showMatrix() {
  
  unsigned long delaytime = 100;
  
  for (int i = 0; i < 10; i++) {

    for (int j = 0; j < 10; j++) {
      
      lc.setRow(0, j, IMAGES[i][j]);
    }
    
    delay(delaytime);
  }

}


void loop() {
  showMatrix();
  lc.setIntensity(0, 10);
}
